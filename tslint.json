{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "codelyzer"
    ],
    "rules": {
        "align": [ // выравнивание текста по вертикали
            true,
            "parameters",
            "statements",
            "arguments",
            "members"
        ],
        "arrow-return-shorthand": true, // краткий return для стрелочных функций
        "binary-expression-operand-order": true, // 1 + x => x + 1
        "curly": true, // скобки для операторов
        "cyclomatic-complexity": [
            true,
            20
        ], // сложность метода      
        "deprecation": true,
        "eofline": true, // строка в конце файла
        "forin": true, // обязательный if внутри forin
        "function-constructor": true, // круглые скобки для конструктора
        "indent": [
            true,
            "spaces",
            2
        ],
        "max-classes-per-file": [
            true,
            1
        ], // один класс для в файле
        "max-file-line-count": [
            true,
            400
        ], // максимальное количество строк в файле
        "max-line-length": [
            true,
            {
                "limit": 120
            }
        ],
        "new-parens": true, // круглые скобки для конструктора
        "no-any": true, // запрет any
        "no-duplicate-imports": true, // запрет повторяющихся импортов
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-empty-interface": true,
        "no-import-side-effect": true, // запрет сайд-эфектов в импортах
        "no-magic-numbers": true, // запрет на магические цифры
        "no-shadowed-variable": true,
        "no-trailing-whitespace": true,
        "no-unused-variable": [
            true
        ],
        "no-var-keyword": true,
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-first",
                "named-imports-order": "lowercase-first"
            }
        ],
        "prefer-const": true,
        "quotemark": [true, "single"],
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "triple-equals": true,
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration"
        ]
    }
}